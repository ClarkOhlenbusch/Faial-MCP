{
  "name": "faial-mcp",
  "version": "0.1.0",
  "description": "Model Context Protocol server that wraps the Faial CUDA static analysis tool.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "faial-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node -e \"const fs = require('fs'); const path = require('path'); if (!fs.existsSync('api')) fs.mkdirSync('api'); fs.copyFileSync('dist/index.js', 'api/index.js'); fs.copyFileSync('dist/faialRunner.js', 'api/faialRunner.js')\"",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "mcp": "cross-env TRANSPORT_MODE=stdio node --loader ts-node/esm src/index.ts",
    "mcp:built": "cross-env TRANSPORT_MODE=stdio node dist/index.js",
    "check": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "faial",
    "cuda",
    "static-analysis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.5.5",
    "cross-env": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
